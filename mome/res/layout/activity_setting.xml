<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_head_height"
        android:background="@color/white"
       android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_marginOrpadding"
        android:paddingRight="@dimen/common_marginOrpadding" >

        <TextView
            android:id="@+id/titlebar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/headview_btn_back"
             />

        
        
        <TextView
            android:id="@+id/titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black"
            android:text="设置"
            android:textSize="18sp"
             />
        </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head_layout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gary_line"
                android:padding="15dp"
                android:text="关联第三方平台"
                android:textColor="@color/black"
                android:textSize="@dimen/common_middle_textSize" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="@dimen/common_marginOrpadding" >

                <ImageView
                    android:id="@+id/xinlang_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/sina_select" />

                <TextView
                    android:id="@+id/xinlang_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/xinlang_icon"
                    android:text="新浪微博"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_textSize" />

                <Button
                    android:id="@+id/sinaBind_bt"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_corner"
                    android:text="绑定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_small_textSize" />
            </RelativeLayout>

            <TextView
               style="@style/line_horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="@dimen/common_marginOrpadding" >

                <ImageView
                    android:id="@+id/wechat_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/weichat_select" />

                <TextView
                    android:id="@+id/wechat_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/wechat_icon"
                    android:text="微信"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_textSize" />

               

                <Button
                    android:id="@+id/wechatBind_bt"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_corner"
                    android:text="绑定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_small_textSize" />
            </RelativeLayout>

             <TextView
               style="@style/line_horizontal" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common_marginOrpadding" >

                <ImageView
                    android:id="@+id/douban_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/douban_select" />

                <TextView
                    android:id="@+id/douban_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/douban_icon"
                    android:text="豆瓣"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_textSize" />

                

                <Button
                    android:id="@+id/doubanBind_bt"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_corner"
                    android:text="绑定"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_small_textSize" />
            </RelativeLayout>

           <TextView
               style="@style/line_horizontal" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:visibility="gone"
                android:padding="15dp" >

                <ImageView
                    android:id="@+id/phone_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/login_qq" />

                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/phone_icon"
                    android:text="手机绑定" /><TextView
                    android:id="@+id/bangding_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/phone_tv"
                    android:text="已绑定"
                    android:textSize="10sp"
                    android:visibility="visible" />
<TextView
                    android:id="@+id/bindPhone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/bangding_tv"
                    android:text="138****0000"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bindPhone_bt"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:background="#D9D9D9"
                    android:text="修改"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@color/gary_line"
                android:textColor="@color/black"
                android:textSize="@dimen/common_middle_textSize"
                android:text="隐私与安全" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="15dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息与提示" />

                <ImageView
                    android:id="@+id/iv_switch_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/choice_open"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_switch_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/choice_close"
                    android:visibility="visible" />
            </RelativeLayout>

            <TextView
               style="@style/line_horizontal" />


            <RelativeLayout
                android:id="@+id/opinion_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="@dimen/common_max_marginOrpadding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_textSize"
                    android:text="意见反馈" />

                <ImageView
                    android:id="@+id/yijian_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/discovery_icon_arrow" />
            </RelativeLayout>

             <TextView
               style="@style/line_horizontal" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="@dimen/common_max_marginOrpadding" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_textSize"
                    android:text="清楚缓存" />

                <TextView
                    android:id="@+id/clearCache_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_textSize"
                    android:drawableRight="@drawable/discovery_icon_arrow"
                    android:text="256MB" />
            </RelativeLayout>
            <View style="@style/line_horizontal"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>