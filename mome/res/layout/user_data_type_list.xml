<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout 
         android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal"
        >
        
        
    
    
    <TextView
        android:id="@+id/dataTypeName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_middle_marginOrpadding"
        android:layout_marginTop="@dimen/common_marginOrpadding"
        android:text="剧情"
        android:textColor="@color/gray"
        android:textSize="@dimen/common_middle_textSize" />

    <TextView
        android:id="@+id/dataTypeValue_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_marginOrpadding"
        android:layout_marginRight="@dimen/common_marginOrpadding"
        android:layout_marginTop="@dimen/common_marginOrpadding"
        android:text="76"
        android:textColor="@color/Purple"
        android:textSize="@dimen/common_middle_textSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_marginOrpadding"
        android:text="部"
        android:textColor="@color/gray"
        android:textSize="@dimen/common_middle_textSize" />
</LinearLayout>
    <TextView
        android:id="@+id/dataTypeMark_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_max_marginOrpadding"
        android:layout_marginTop="@dimen/common_marginOrpadding"
        android:layout_weight="1"
        android:text="8.9"
        android:textColor="@color/Purple"
        android:gravity="right"
        android:textSize="@dimen/common_middle_textSize" />

</LinearLayout>