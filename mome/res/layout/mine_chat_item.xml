<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/timeView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="2013-2-24"
        android:textColor="@color/gray"
        android:textSize="@dimen/common_middle_textSize" />

    <com.mome.main.netframe.volley.toolbox.NetworkImageView
        android:id="@+id/userIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/timeView"
         >
    </com.mome.main.netframe.volley.toolbox.NetworkImageView>

    <TextView
        android:id="@+id/msgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeView"
        android:background="@drawable/msg_bg_mine"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/userIcon"
        android:maxWidth="200dp"
        android:padding="@dimen/common_max_marginOrpadding"
        android:text="我不是我的的饿死地方还送电风扇等候发生地附近搜到福建省东方手动方式都放松的"
        android:textColor="@color/gray"
        android:textSize="@dimen/common_middle_textSize" />

</RelativeLayout>