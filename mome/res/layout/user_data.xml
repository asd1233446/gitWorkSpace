<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <com.mome.main.business.HeadRef
        xmlns:head="http://schemas.android.com/apk/res/com.mome.main"
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        head:leftBtnShow="show"
        head:leftButton="img"
        head:leftImg="@drawable/headview_btn_back"
        head:titleShow="show"
        head:titleText="我的数据" >
    </com.mome.main.business.HeadRef>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gary_line" >
    </LinearLayout>

    <TextView
        android:id="@+id/user_data_type_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/E0DEDA"
        android:gravity="center"
        android:padding="20dp"
        android:text="观影数量" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gary_line" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/E0DEDA" >

        <TextView
            android:id="@+id/user_data_btn_all"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            android:text="全部" />

        <TextView
            android:id="@+id/user_data_btn_year"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            android:text="年份筛选" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gary_line" >
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/user_data_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gary_line" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/E0DEDA"
        android:gravity="center"
        android:padding="20dp" >

        <ImageView
            android:id="@+id/user_data_indicator_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/newuser_guide_img_indicator_two" />

        <ImageView
            android:id="@+id/user_data_indicator_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/newuser_guide_img_indicator_two" />

        <ImageView
            android:id="@+id/user_data_indicator_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/newuser_guide_img_indicator_two" />

        <ImageView
            android:id="@+id/user_data_indicator_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/newuser_guide_img_indicator_two" />

    </LinearLayout>

</LinearLayout>
